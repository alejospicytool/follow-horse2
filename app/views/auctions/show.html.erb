<!-- Content -->
<div class="horses-show">
  <div class="foto w-100 h-100 mb-3">
    <% if @auction.photo.key %>
      <%= cl_image_tag @auction.photo.key, class: "w-100", style: "height: 18.75rem;" %>
    <% else %>
      <%= image_tag('caballo.png', class: "w-100", style: "height: 18.75rem;") %>
    <% end %>
  </div>

  <div class="container px-4">
    <div class="info">

      <div class="horse-titulo d-flex flex-column mb-4">
        <span class= "subtitle">Ubicacion</span>
        <span class= "text"><%= @auction.location %></span>
      </div>

      <div class="detalles d-flex flex-column py-3">
        <span class= "subtitle">Condiciones</span>
        <span class= "subtitle"><a href="">Ver condiciones del remate</a></span></span>
      </div>

      <div class="d-flex flex-column py-3">
        <span class= "subtitle">Fecha</span>
        <div class="d-flex justify-content-between">
          <span class= "text">Inicio: <%= @auction.start.strftime("%d/%m/%Y") %></span>
          <span class= "text">Finalizacion: <%= @auction.finish.strftime("%d/%m/%Y") %></span>
        </div>
        <span class= "subtitle text-center">Quedan 2 dias 7:03:21</span>
      </div>
    </div>
  </div>

  <div class="boton">
    <a href="">
      <button>VER</button>
    </a>
  </div>
</div>
