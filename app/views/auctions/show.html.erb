<!-- Content -->
<div class="horses-show d-flex flex-column align-items-center" style="margin-bottom: 5rem !important;">
  <div class="col-lg-6 col-sm-10 col-md-8 col-12 px-0" style="box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;">

    <div class="foto w-100 h-100 mb-3">
      <% if @auction.photo.key %>
        <%= cl_image_tag @auction.photo.key, class: "w-100", style: "height: 25rem;" %>
      <% else %>
        <%= image_tag('auction-logo-solo.png', class: "w-100", style: "height: 25rem;") %>
      <% end %>
    </div>

    <div class="container px-3 pb-5">
      <div class="info">

        <div class="horse-titulo d-flex flex-column mb-4">
          <div class="d-flex align-items-center mb-1">
            <%= image_tag('ubicacion.svg', style: "margin-right: 5px; height: 18px;") %>
            <span class= "subtitle">Ubicación</span>
          </div>
          <span class= "text px-4"><%= @auction.location %></span>
        </div>

        <div class="detalles d-flex flex-column py-3">
            <div class="card" style="height: auto; box-shadow: none; border: none;">
              <div class="" id="headingOne">
                <button class="btn btn-link d-flex align-items-center justify-content-between w-100 px-0" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" style="text-decoration: none; color: #212529;">
                  <div class="d-flex align-items-center">
                    <%= image_tag('condiciones.svg', style: "margin-right: 5px; height: 18px;") %>
                    <span class= "subtitle">Condiciones</span>
                  </div>
                  <%= image_tag('arrow-down.svg') %>
                </button>
              </div>

              <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-bs-parent="#accordion">
                <div class="card-body mb-3 container py-0 px-3" style="margin-top: 10px !important;">
                  <div class="d-flex flex-column py-3" style="border-top: none;">
                    <span class= "text"><%= @auction.condiciones %> </span>
                  </div>
                </div>
              </div>
            </div>
          <%# <span class= "subtitle d-flex align-items-center px-4"> %>
            <%# if @auction.condiciones != nil %>
              <%# <a href="<%= @auction.condiciones " target="_blank">Ver condiciones del remate %>
            <%# <i class="fa-solid fa-angle-right"></i> %>
              <%# </a> %>
            <%# else %>
              <%# <span>Condiciones no disponibles</span> %>
            <%# end %>
          <%# </span> %>
        </div>

        <div class="d-flex flex-column py-3 mb-4">
          <div class="d-flex align-items-center mb-1">
            <%= image_tag('fecha.svg', style: "margin-right: 5px; height: 18px;") %>
            <span class= "subtitle">Fecha</span>
          </div>
          <div class="d-flex justify-content-between mb-2 px-4">
            <span class="text">Inicio: <%= @auction.start.strftime("%d/%m/%Y") %></span>
            <span class="text text-right">Finalización: <%= @auction.finish.strftime("%d/%m/%Y") %></span>
          </div>
          <% if @auction.start > Time.now %>
            <% t = @auction.start - DateTime.now %>
            <% mm, ss = t.divmod(60) %>
            <% hh, mm = mm.divmod(60)  %>
            <% dd, hh = hh.divmod(24)  %>
            <span class= "subtitle text-center mt-3">Faltan <%= "#{dd} días #{hh}:#{mm.round(2)}:#{ss.round}"%></span>
          <% else %>
            <% t = @auction.finish - DateTime.now %>
            <% mm, ss = t.divmod(60) %>
            <% hh, mm = mm.divmod(60)  %>
            <% dd, hh = hh.divmod(24)  %>
            <span class= "subtitle text-center mt-3">Quedan <%= "#{dd} días #{hh}:#{mm.round(2)}:#{ss.round}"%></span>
          <% end %>
        </div>
      </div>
      <div class="d-flex justify-content-center mb-3">
        <a href="<%= @auction.link_auction %>" target="_blank">
          <button class= "btn-submit mt-2">VER REMATE</button>
        </a>
      </div>
    </div>

  </div>
</div>
